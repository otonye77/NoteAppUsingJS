<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notes</title>
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
     {{>header}}
    <div class="notes-container">
      <h1>ADD NOTE</h1>
      <form class="notesform">
        <input  class="titleInput" placeholder="Title of note" />
        <textarea class="descriptionInput" placeholder="Description"></textarea>
         <input type="date"  class="dateInput" placeholder="Due date" />
        <div class="add">
             <button type="submit">+</button>
        </div>
      </form>
    </div>
    <script src="./js/app.js"></script>
  </body>
</html>